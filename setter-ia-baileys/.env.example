# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/setter_baileys
REDIS_URL=redis://localhost:6379

# API Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1
JWT_SECRET=your-super-secret-jwt-key-here
API_RATE_LIMIT=1000

# WhatsApp Configuration
WHATSAPP_SESSION_TIMEOUT=300000
WHATSAPP_MAX_RECONNECT_ATTEMPTS=5
WHATSAPP_RECONNECT_DELAY=5000

# Media Storage
MEDIA_STORAGE_TYPE=local # or s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=setter-baileys-media

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3

# Monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=info
LOG_FORMAT=json

# Redis Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_DB=0

# Service Ports
SESSION_MANAGER_PORT=3001
MESSAGE_GATEWAY_PORT=3002
USER_MANAGEMENT_PORT=3003
WEBHOOK_SERVICE_PORT=3004
MEDIA_SERVICE_PORT=3005
ANALYTICS_SERVICE_PORT=3006